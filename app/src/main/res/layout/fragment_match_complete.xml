<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity.margin.vertical"
    android:paddingLeft="@dimen/activity.margin.horizontal"
    android:paddingRight="@dimen/activity.margin.horizontal"
    android:paddingTop="@dimen/activity.margin.vertical"
    tools:context=".views.fragments.EnableWifiFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_check_circle_green_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip.match_complete"
            style="@style/TextAppearance.AppCompat.Headline"/>

    </LinearLayout>

</RelativeLayout>
